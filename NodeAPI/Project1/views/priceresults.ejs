<%- include('partials/header')  %> 
<div class="container">   
    <h1>BitCoin Price App</h1>
    <form action="/priceResults.ejs" method="get">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="currencyOptions" id="USD" value="USD">
            <label class="form-check-label" for="inlineRadio1">USD</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="currencyOptions" id="GBP" value="GBP">
            <label class="form-check-label" for="inlineRadio2">GBP</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="currencyOptions" id="EUR" value="EUR">
            <label class="form-check-label" for="inlineRadio3">EUR</label>
        </div>   
        <br><br>
        <button type="submit" id="btn">Get Price</button>
</form>
<h2>This is the current price:</h2>

<p><%=data.bpi.${currency}.rate %> </p>
</div>
<%- include ('partials/footer') %> 
